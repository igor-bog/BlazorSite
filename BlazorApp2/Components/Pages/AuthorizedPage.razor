@page "/AuthorizedPage"
@rendermode InteractiveServer

@using BlazorApp2.Shared

@using Microsoft.AspNetCore.Components


<h3>Добро пожаловать на страницу авторизованных пользователей!</h3>

<p>Только вошедшие пользователи могут здесь быть.</p>

<button class="btn btn-primary" @onclick="Logout">Выйти</button>

<button class="btn btn-primary" @onclick="GoToContact">Связаться с админом</button>


@code {
     [Inject] NavigationManager Navigation { get; set; } = default!;
    private void Logout()
    {
        // Для простоты просто перенаправляем на страницу входа
        Navigation.NavigateTo("/login", true);

        
    }

 private void GoToContact()
    {
        Navigation.NavigateTo("/contact", forceLoad: true);
    }

}
